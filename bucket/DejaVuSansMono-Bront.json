    "homepage": "https://github.com/chrismwendt/bront",
    "url": "https://github.com/chrismwendt/bront/raw/master/DejaVuSansMono-Bront.ttf",
    "hash": "c10b26e3317daa36857d8d23a416ae414c3a8583d02c609f22294a55c81cc316",
    "checkver": "github",
    "depends": "sudo",
    "installer": {
        "script": [
            "if(!(is_admin)) { error \"Admin rights are required, please run 'sudo scoop install $app'\"; exit 1 }",
            "New-ItemProperty -Path 'registry::HKEY_CURRENT_USER\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Fonts' -Name $app.Replace('.ttf', ' (TrueType)') -Value (\"$env:LOCALAPPDATA\\Microsoft\\Windows\\Fonts\\\" + $($app.Replace('.ttf', '_0.ttf'))) -Force | Out-Null",
            "Copy-Item \"$dir\\$app\" -destination \"$env:LOCALAPPDATA\\Microsoft\\Windows\\Fonts\"",
            "Copy-Item \"$dir\\$app\" -destination (\"$env:LOCALAPPDATA\\Microsoft\\Windows\\Fonts\\\" + $($app.Replace('.ttf', '_0.ttf')))"
        ]
    },
    "uninstaller": {
        "script": [
            "if(!(is_admin)) { error \"Admin rights are required, please run 'sudo scoop uninstall $app'\"; exit 1 }",
            "Remove-ItemProperty -Path 'registry::HKEY_CURRENT_USER\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Fonts' -Name $app.Replace('.ttf', ' (TrueType)') -Force -ErrorAction SilentlyContinue",
            "Remove-Item \"$env:windir\\Fonts\\$app\" -Force -ErrorAction SilentlyContinue",
            "Remove-Item \"$env:LOCALAPPDATA\\Microsoft\\Windows\\Fonts\\$app\"",
            "Remove-Item (\"$env:LOCALAPPDATA\\Microsoft\\Windows\\Fonts\\\" + $($app.Replace('.ttf', '_0.ttf')))",
            "Write-Host \"The '$app' Font family has been uninstalled and will not be present after restarting your computer.\" -Foreground Magenta"
        ]
    }
}